<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>下载页</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 800px;
            margin: auto;
            background: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .file-list {
            margin-bottom: 20px;
        }

        h1, h2 {
            color: #333;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            background: #eee;
            padding: 10px;
            margin-bottom: 5px;
        }

        a {
            color: #007BFF;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }
        .btn {
  /* 基础样式 */
  padding: 10px 20px;
  border: none;
  border-radius: 6px;
  font-size: 16px;
  font-weight: 500;
  cursor: pointer;
  transition: background-color 0.2s, transform 0.1s;
  
  /* 默认颜色 */
  background-color: #007bff;
  color: white;
}

/* 悬停效果 */
.btn:hover {
  background-color: #0056b3;
  transform: scale(1.02);
}

/* 点击效果 */
.btn:active {
  transform: scale(0.98);
}

/* 禁用状态 */
.btn:disabled {
  background-color: #6c757d;
  cursor: not-allowed;
  opacity: 0.7;
  transform: none;
}
/* 方法2的块级居中 */
.center-block {
  display: block;
  margin: 0 auto;
}
/* 将链接变为按钮样式 */
a.btn {
  display: inline-block; /* 或 block */
  text-decoration: none;
  text-align: center;
}
    </style>
</head>
<body>
    <div class="container">
        <h1>下载页</h1>
        <div class="file-list">
            <h2>文件列表</h2>
            <ul id="fileList"></ul>
        </div>
    </div>
    <a href="/video/" class="btn center-block">视频解析</a>
    <script>
        // 定义文件数组
        const files = [
            { name: "[中文译名修正]Minecraft 1.21.51.02 armv8 release.apk", link: "https://ghproxy.cn/https://github.com/masgzy/zy/releases/download/large/Minecraft.1.21.51.02.armv8.release.apk" },
            { name: "原神5.0私服.apk(GI5.0_proxy.apk)", link: "https://ghproxy.cc/https://github.com/masgzy/zy/releases/download/large/GI5.0_proxy.apk" },
            { name: "", link: "" },
            { name: "", link: "" }
        ];

        // 动态生成文件列表
        function generateFileList() {
            const fileList = document.getElementById('fileList');
            files.forEach(file => {
                const li = document.createElement('li');
                li.innerHTML = `${file.name} - <a href="${file.link}" target="_blank">下载</a>`;
                fileList.appendChild(li);
            });
        }

        // 页面加载完成后生成文件列表
        window.onload = generateFileList;
    </script>
</body>
</html>