<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>ËßÜÈ¢ëÊí≠ÊîæÂô®</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      font-family: Arial, sans-serif;
    }

    #iframe-container {
      flex: 1;
      width: 100%;
      position: relative;
    }

    iframe {
      width: 100%;
      height: 100%;
      border: none;
    }

    .switch-btn {
      position: fixed;
      left: 20px;
      bottom: 20px;
      width: 60px;
      height: 60px;
      border-radius: 50%;
      background-color: rgba(0, 0, 0, 0.8);
      color: white;
      border: none;
      font-size: 24px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1000;
      transition: all 0.3s ease;
    }

    .switch-btn:hover {
      transform: scale(1.1);
    }

    .movie-list {
      position: fixed;
      left: 20px;
      bottom: 100px;
      background: rgba(0, 0, 0, 0.9);
      border-radius: 8px;
      padding: 10px;
      display: none;
      flex-direction: column;
      gap: 8px;
      z-index: 999;
    }

    .movie-item {
      color: white;
      padding: 8px 12px;
      border-radius: 4px;
      cursor: pointer;
      transition: background 0.2s;
    }

    .movie-item:hover {
      background: rgba(255, 255, 255, 0.1);
    }

    @media (max-width: 768px) {
      .switch-btn {
        left: 10px;
        bottom: 10px;
        width: 50px;
        height: 50px;
      }

      .movie-list {
        left: 10px;
        bottom: 70px;
      }
    }
  </style>
</head>
<body>
  <!-- iframe ÂÆπÂô® -->
  <div id="iframe-container">
    <iframe id="videoFrame" src=""></iframe>
  </div>

  <!-- ËßÜÈ¢ëÂàáÊç¢ÊåâÈíÆ -->
  <button class="switch-btn" id="switchBtn">üìÅ</button>

  <!-- ËßÜÈ¢ëÂàóË°® -->
  <div class="movie-list" id="movieList"></div>

  <!-- ÈÖçÁΩÆÊñá‰ª∂ -->
  <script src="./config.js"></script>

  <script>
    const switchBtn = document.getElementById("switchBtn");
    const movieList = document.getElementById("movieList");
    const videoFrame = document.getElementById("videoFrame");

function loadVideo(videoId) {
  const fullUrl = `${config.api}${videoId}`;
  videoFrame.src = fullUrl;
}

    // ÂàõÂª∫ËßÜÈ¢ëÂàóË°®
    function createMovieList() {
      if (!config?.movies?.length) return;

      movieList.innerHTML = config.movies
        .map((movie, index) => 
          `<div class="movie-item" data-index="${index}">${movie.name}</div>`
        ).join("");

      // ÁªëÂÆöÁÇπÂáª‰∫ã‰ª∂
      document.querySelectorAll(".movie-item").forEach(item => {
        item.addEventListener("click", e => {
          const index = parseInt(e.target.dataset.index);
          loadVideo(config.movies[index].videoId);
          hideMovieList();
        });
      });
    }

    // ÂàáÊç¢ÂàóË°®ÊòæÁ§∫
    switchBtn.addEventListener("click", () => {
      movieList.style.display = movieList.style.display === "flex" ? "none" : "flex";
    });

    // ÁÇπÂáªÂ§ñÈÉ®ÂÖ≥Èó≠ÂàóË°®
    document.addEventListener("click", e => {
      if (!switchBtn.contains(e.target) && !movieList.contains(e.target)) {
        hideMovieList();
      }
    });

    // ÂàùÂßãÂåñ
    document.addEventListener("DOMContentLoaded", () => {
      createMovieList();
      if (config.movies.length > 0) {
        loadVideo(config.movies[0].videoId); // ÈªòËÆ§Âä†ËΩΩÁ¨¨‰∏Ä‰∏™ËßÜÈ¢ë
      }
    });
  </script>
</body>
</html>