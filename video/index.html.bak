        </div>
        
        <div class="error" id="errorMsg"></div>
        
        <div class="result" id="result">
            <div class="video-info">
                <img class="cover" id="coverImg" src="" alt="è§†é¢‘å°é¢" onerror="this.style.display='none'">
                <h2 class="video-title" id="videoTitle"></h2>
            </div>
            
            <video id="videoPlayer" controls playsinline>
                <source src="" type="video/mp4">
                æ‚¨çš„æµè§ˆå™¨ä¸æ”¯æŒè§†é¢‘æ’­æ”¾
            </video>
            
            <div class="links">
                <p>æ’­æ”¾åœ°å€: <span id="playUrl"></span></p>
                <p>ä¸‹è½½åœ°å€: <span id="downloadUrl"></span></p>
                <p>å°é¢åœ°å€: <span id="coverUrl"></span></p>
            </div>
            
            <div class="button-group">
                <a href="#" class="btn btn-link" id="playBtn" target="_blank">
                    â–¶ï¸ æ’­æ”¾
                </a>
                <a href="#" class="btn btn-link" id="downloadBtn" target="_blank">
                    â¬‡ï¸ ä¸‹è½½
                </a>
                <a href="#" class="btn btn-link" id="coverBtn" target="_blank">
                    ğŸ–¼ï¸ å°é¢
                </a>
            </div>
            
            <div class="time" id="time"></div>
        </div>
    </div>

    <script>
        // ä»£ç†æœåŠ¡å™¨é…ç½®
        const PROXY_SERVERS = [
            'https://corsproxy.io/?',
            'https://api.allorigins.win/raw?url=',
            'https://cors-anywhere.herokuapp.com/'
        ]
        let currentProxyIndex = 0

        document.getElementById('urlInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') parseVideo()
        })

        async function parseVideo() {
            const urlInput = document.getElementById('urlInput')
            const parseBtn = document.getElementById('parseBtn')
            const resultDiv = document.getElementById('result')
            const errorMsg = document.getElementById('errorMsg')
            const clearBtn = document.getElementById('clearBtn')

            // é‡ç½®çŠ¶æ€
            resultDiv.classList.remove('show')
            errorMsg.style.display = 'none'
            urlInput.blur()
            parseBtn.disabled = true

            // è¾“å…¥éªŒè¯
            const videoUrl = urlInput.value.trim()
            if (!videoUrl) {
                showError('è¯·è¾“å…¥æœ‰æ•ˆçš„è§†é¢‘é“¾æ¥')
                parseBtn.disabled = false
                return
            }

            try {
                // æ˜¾ç¤ºåŠ è½½çŠ¶æ€
                parseBtn.innerHTML = 'ğŸ”„ è§£æä¸­<span class="loading"></span>'

                // æ„é€ è¯·æ±‚URL
                const apiUrl = getProxyUrl(`https://api.yyy001.com/api/videoparse?url=${encodeURIComponent(videoUrl)}`)
                
                // è¯·æ±‚é…ç½®
                const controller = new AbortController()
                const timeoutId = setTimeout(() => controller.abort(), 15000)

                // å‘é€è¯·æ±‚
                const response = await fetch(apiUrl, {
                    signal: controller.signal,
                    headers: {
                        'Accept': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                }).finally(() => {
                    clearTimeout(timeoutId)
                    parseBtn.disabled = false
                })

                // å¤„ç†HTTPé”™è¯¯
                if (!response.ok) {
                    const errorText = await response.text()
                    throw new Error(`[${response.status}] ${errorText.slice(0, 80)}`)
                }

                // éªŒè¯å“åº”æ ¼å¼
                const contentType = response.headers.get('content-type')
                if (!contentType?.includes('application/json')) {
                    const text = await response.text()
                    console.warn('éJSONå“åº”:', text)
                    throw new Error('æœåŠ¡å™¨è¿”å›äº†æ— æ•ˆçš„å“åº”æ ¼å¼')
                }

                // è§£ææ•°æ®
                const data = await response.json()
                console.debug('APIå“åº”:', data)

                // éªŒè¯æ•°æ®ç»“æ„
                if (!data?.success || !data.data?.play_url) {
                    throw new Error(data?.message || 'æ— æ•ˆçš„APIå“åº”ç»“æ„')
                }

                // æ›´æ–°ç•Œé¢
                updateUI(data)
                resultDiv.classList.add('show')
                clearBtn.style.display = 'inline-block'

            } catch (error) {
                console.error('è¯·æ±‚å¤±è´¥:', error)
                handleNetworkError(error)
            } finally {
                parseBtn.innerHTML = 'è§£æè§†é¢‘'
            }
        }

        function getProxyUrl(url) {
            return PROXY_SERVERS[currentProxyIndex] + encodeURIComponent(url)
        }

        function updateUI(data) {
            // å°é¢å¤„ç†
            const coverImg = document.getElementById('coverImg')
            if (data.data.cover) {
                coverImg.style.display = 'block'
                coverImg.src = data.data.cover
            } else {
                coverImg.style.display = 'none'
            }

            // è§†é¢‘ä¿¡æ¯
            document.getElementById('videoTitle').textContent = data.data.title || 'æœªçŸ¥æ ‡é¢˜'
            document.getElementById('time').textContent = `å“åº”æ—¶é—´: ${data.time || 'æœªçŸ¥'}`

            // è§†é¢‘æ’­æ”¾å™¨
            const videoSource = document.getElementById('videoPlayer').querySelector('source')
            videoSource.src = data.data.play_url
            document.getElementById('videoPlayer').load()

            // é“¾æ¥å¤„ç†
            const setLink = (id, url) => {
                const element = document.getElementById(id)
                element.textContent = url
                element.parentElement.style.display = url ? 'block' : 'none'
            }

            setLink('playUrl', data.data.play_url)
            setLink('downloadUrl', data.data.url)
            setLink('coverUrl', data.data.cover)

            // æŒ‰é’®é“¾æ¥
            document.getElementById('playBtn').href = data.data.play_url || '#'
            document.getElementById('downloadBtn').href = data.data.url || '#'
            document.getElementById('coverBtn').href = data.data.cover || '#'
        }

        function handleNetworkError(error) {
            let errorMessage = 'è¯·æ±‚å¤±è´¥ï¼Œè¯·é‡è¯•'
            
            if (error.name === 'AbortError') {
                errorMessage = 'è¯·æ±‚è¶…æ—¶ï¼Œè¯·æ£€æŸ¥ç½‘ç»œè¿æ¥'
            } else if (error.message.includes('Failed to fetch')) {
                errorMessage = 'ç½‘ç»œè¿æ¥å¤±è´¥'
                currentProxyIndex = (currentProxyIndex + 1) % PROXY_SERVERS.length
            } else if (error.message.includes('CORS')) {
                errorMessage = 'è·¨åŸŸè¯·æ±‚è¢«é˜»æ­¢ï¼Œå·²åˆ‡æ¢ä»£ç†'
                currentProxyIndex = (currentProxyIndex + 1) % PROXY_SERVERS.length
            } else {
                errorMessage = error.message
            }

            showError(errorMessage)
        }

        function showError(message) {
            const errorMsg = document.getElementById('errorMsg')
            errorMsg.textContent = message
            errorMsg.style.display = 'block'
        }

        function clearAll() {
            document.getElementById('urlInput').value = ''
            document.getElementById('result').classList.remove('show')
            document.getElementById('errorMsg').style.display = 'none'
            document.getElementById('clearBtn').style.display = 'none'
            
            // é‡ç½®æ‰€æœ‰å†…å®¹
            document.getElementById('coverImg').src = ''
            document.getElementById('videoTitle').textContent = ''
            document.getElementById('videoPlayer').querySelector('source').src = ''
            document.getElementById('videoPlayer').load()
            
            ['playUrl', 'downloadUrl', 'coverUrl'].forEach(id => {
                document.getElementById(id).textContent = ''
            })
            
            document.getElementById('time').textContent = ''
        }
    </script>
